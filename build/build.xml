<?xml version="1.0"?>

<project xmlns:ivy="antlib:org.apache.ivy.ant" 
	name="simplestPossibleThing" basedir="../">

	<property name="src.dir" value="src"/>
	<property name="test.dir" value="test" />
	<property name="dist.dir" value="dist" />
	<property name="war.dir" value="WebContent"/>
	<property name="weblib.dir" value="${war.dir}/WEB-INF/lib"/>

	<property name="lib.dir" value="lib" />
	<property name="build.dir" value="build" />
	<property name="ivy.dir" value="${build.dir}/ivy" />
	<ivy:resolve file="${ivy.dir}/ivy.xml"/>

	<target name="retrieve.dependencies">
		<ivy:retrieve pattern="${lib.dir}/[conf]/[artifact]-[revision](-[classifier]).[ext]" />
		<delete dir="${weblib.dir}"/>
		<copy todir="${weblib.dir}">
		    <fileset dir="${lib.dir}/deploy" excludes="*sources*,*javadoc*"/>
		</copy>
	</target>
	
</project>
